doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  style 
    include common.css
    include search.css
  script(src='logik.js')
  title PaperSign
.tabbtn
  form(action = "/" method="get")
    input(class="button" type="submit" value="Kasse")
  form(action = "/faktura" method="get")
    input(class="button" type="submit" value="Faktura")
  form(action= "/crud" method="get")
    input(class="button" type="submit" value="Crud")
h1#tabTitle PaperSign Search
  h2#tabTitle Søgning
    form.div2(action = "/search", method="get")
        input#atribut(type='text' name="attribut" placeholder='attribute')
        input#value(type='text' name="vaerdi" placeholder='soegevaerdi')
        input(class='button' type="submit", value="Søg")
        <br>
        <br>
  #tabTitle.vareattributter
    .attributter Varenummer
    .attributter Navn
    .attributter Pris
    .attributter Antal
    .attributter Leverandør 
    .attributter Bestillingsnummer 
    .attributter Produktgruppenr
    each data in search
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.produktNr
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.navn
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.pris
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.antal 
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.leveradør 
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.bestillingsnummer
        a#info(class='productHeader' href='/CRUD/'+ data.docID +'')= data.gruppeNr
#psLogo
  img(src='/images/papersignLogo.png') 