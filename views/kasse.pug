h1 PaperSign Kasse
.parent
  .child1
    form.div2(type="hidden" action = "/search", method="get")
      input#atribut(type='text' name="attribut" placeholder='Attribute')
      input#value(type='text' name="vaerdi" placeholder='Søgeværdi')
      input(class='button' type="submit", value="Søg")
    form#pg(type="hidden" action = "/kasse", method="get")
      select#pg(name='pgroup' onchange='{this.form.submit(); server.getLastClickedButton("ohh");}')
        option(value='' disabled='' selected='') Produktgrupper
        option(id='visalt' value='visalt') VisAlle
        each d of produktgrupper
          if(d.gruppeNr==pgid)
            option(value=""+d.gruppeNr+"" selected)= '' + d.navn
          else 
            option(value=""+d.gruppeNr+"")= '' + d.navn
        option(id='intet' value='intet') *Intet
    p#titleP Produkter
    form.div3(type="hidden" action = "kasse", method="get") 
      select#produktList(value="" name='produktList' size="3")
        each data in produkter
          option(value=(data.navn+"."+data.pris) placeholder="")= data.produktnr + " " + data.navn + ' ' + data.pris + ',-kr'
      input#antal(type='number' name="antal" placeholder='Antal')
      button#tilfoejProdukt(class='button' type="submit" onclick='getLastClickedButton("kurv")') Tilføj
  .child2
    p#titleB  
    p#titleB
    p#titleK Kurv
    select#kurv(name='kurv' size="3")
      if (kurv!=null)
        each k of kurv
          option(value=""+k.navn+"" selected)= k.antal +'stk. ' + k.navn + ' ' + k.pris +' Total:' + k.total
    button#tilfoejRabat Tilf&oslash;j Rabat
    input#rabat(type='number' placeholder='Rabat')
